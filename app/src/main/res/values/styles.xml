<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CommonMargin">
        <item name="android:layout_marginStart">@dimen/hor_margin</item>
        <item name="android:layout_marginEnd">@dimen/hor_margin</item>
        <item name="android:layout_marginBottom">@dimen/ver_margin</item>
        <item name="android:layout_marginTop">@dimen/ver_margin</item>
    </style>

    <style name="AppTheme.SubviewMargin">
        <item name="android:layout_marginStart">@dimen/subview_hor_margin</item>
        <item name="android:layout_marginEnd">@dimen/subview_hor_margin</item>
        <item name="android:layout_marginBottom">@dimen/subview_ver_margin</item>
        <item name="android:layout_marginTop">@dimen/subview_ver_margin</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
