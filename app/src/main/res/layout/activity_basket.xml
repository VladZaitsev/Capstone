<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.baikaleg.v3.cookingaid.ui.basket.BasketViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/products_content"
            app:basketProducts="@{model.data}"
            app:layout_constraintBottom_toTopOf="@+id/included_footer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/included_footer"
            layout="@layout/include_activity_basket_footer" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:elevation="@dimen/fab_elevation"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/included_footer"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/btn_add" />
    </android.support.constraint.ConstraintLayout>
</layout>
