<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/widget_products_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorViewBackground"
        android:padding="8dp"
        android:text="@string/shopping_list"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/widget_products_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorViewBackground"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/widget_products_title" />

    <TextView
        android:id="@+id/widget_empty_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_products_title"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/empty_widget_list"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</RelativeLayout>