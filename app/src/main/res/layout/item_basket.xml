<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin"
        android:background="@color/colorImageBackground"
        app:cardElevation="@dimen/card_view_elevation">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ver_margin"
                android:layout_marginEnd="@dimen/hor_margin"
                android:layout_marginLeft="@dimen/hor_margin"
                android:layout_marginRight="@dimen/hor_margin"
                android:layout_marginStart="@dimen/hor_margin"
                android:layout_marginTop="@dimen/ver_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/check_border"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/ver_margin"
                android:layout_marginLeft="@dimen/hor_margin"
                android:layout_marginStart="@dimen/hor_margin"
                android:layout_marginTop="@dimen/ver_margin"
                android:background="@color/colorBorder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/check"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/check_border">

                <include layout="@layout/include_item_storage_content" />
            </FrameLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
