<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/recipe_card_view_margin"
        android:background="@color/colorBackground"
        app:cardElevation="@dimen/recipe_card_view_elevation">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorBackground"
                android:contentDescription="@string/cd_image"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mock_recipe_item" />

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/ver_margin"
                android:layout_marginEnd="@dimen/hor_margin"
                android:layout_marginStart="@dimen/hor_margin"
                android:layout_marginTop="@dimen/ver_margin"
                android:maxLines="3"
                android:text="@string/mock_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toTopOf="@+id/btn_top_barrier"
                app:layout_constraintEnd_toStartOf="@+id/txt_barrier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ver_margin"
                android:layout_marginEnd="@dimen/hor_margin"
                android:layout_marginRight="@dimen/hor_margin"
                android:text="@string/mock_persons"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintBottom_toBottomOf="@+id/title_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title_txt" />

            <TextView
                android:id="@+id/calories_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ver_margin"
                android:layout_marginEnd="@dimen/hor_margin"
                android:layout_marginRight="@dimen/hor_margin"
                android:text="@string/mock_calories"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quantity_txt" />

            <TextView
                android:id="@+id/price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ver_margin"
                android:layout_marginEnd="@dimen/hor_margin"
                android:layout_marginRight="@dimen/hor_margin"
                android:text="@string/mock_price"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calories_txt" />

            <ImageButton
                android:id="@+id/recount_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ver_margin"
                android:layout_marginLeft="@dimen/hor_margin"
                android:layout_marginStart="@dimen/hor_margin"
                android:layout_marginTop="@dimen/ver_margin"
                android:background="@android:color/transparent"
                android:contentDescription="@string/cd_recount"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_top_barrier"
                app:srcCompat="@drawable/btn_recount" />

            <ImageButton
                android:id="@+id/basket_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ver_margin"
                android:layout_marginLeft="@dimen/hor_margin"
                android:layout_marginStart="@dimen/hor_margin"
                android:layout_marginTop="@dimen/ver_margin"
                android:background="@android:color/transparent"
                android:contentDescription="@string/cd_basket"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recount_btn"
                app:layout_constraintTop_toTopOf="@+id/btn_top_barrier"
                app:srcCompat="@drawable/btn_basket" />

            <ImageButton
                android:id="@+id/expand_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ver_margin"
                android:layout_marginEnd="@dimen/hor_margin"
                android:layout_marginRight="@dimen/hor_margin"
                android:layout_marginTop="@dimen/ver_margin"
                android:background="@android:color/transparent"
                android:contentDescription="@string/cd_basket"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_top_barrier"
                app:srcCompat="@drawable/btn_expand" />

            <android.support.constraint.Barrier
                android:id="@+id/btn_top_barrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="title_txt,quantity_txt,calories_txt,price_txt" />

            <android.support.constraint.Barrier
                android:id="@+id/txt_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="left"
                app:constraint_referenced_ids="quantity_txt,calories_txt,price_txt" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>
