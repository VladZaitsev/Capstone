<layout>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ver_margin"
            android:layout_marginEnd="@dimen/hor_margin"
            android:layout_marginLeft="@dimen/hor_margin"
            android:layout_marginRight="@dimen/hor_margin"
            android:layout_marginStart="@dimen/hor_margin"
            android:layout_marginTop="@dimen/ver_margin"
            android:text="@string/mock_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toStartOf="@+id/quantity_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ver_margin"
            android:layout_marginEnd="@dimen/hor_margin"
            android:layout_marginLeft="@dimen/hor_margin"
            android:layout_marginRight="@dimen/hor_margin"
            android:layout_marginStart="@dimen/hor_margin"
            android:layout_marginTop="@dimen/ver_margin"
            android:text="@string/mock_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/quantity_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ver_margin"
            android:layout_marginEnd="@dimen/hor_margin"
            android:layout_marginRight="@dimen/hor_margin"
            android:text="@string/mock_quantity"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/quantity_border"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/ver_margin"
            android:layout_marginEnd="@dimen/hor_margin"
            android:layout_marginRight="@dimen/hor_margin"
            android:layout_marginTop="@dimen/ver_margin"
            android:background="@color/colorBorder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/quantity"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>
